<odoo>
  <data>
    <record id="product_imei_extend_view" model="ir.ui.view">
        <field name="name">view.imei.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//notebook" position="inside">
              <page string="IMEI" >
                <tree>
                  <field name="imeis">
                    <field name="imei" domain="[('sale_order_line_id','=',False), ('account_order_line_id','=',False), ('company_id','=', allowed_company_ids[0])]" />
                  </field>
                </tree>
              </page>
          </xpath>
        </field>
    </record>

  </data>
</odoo>